@model ElTecno.Models.Component

@{
    ViewData["Title"] = Model.Id == 0 ? "Crear Componente" : "Editar Componente";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Save">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control">
                        <option value="">Seleccione un tipo</option>
                        <option value="chart">Gráfico</option>
                        <option value="widget">Widget</option>
                        <option value="table">Tabla</option>
                        <option value="component">Componente</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="ApiUrl" class="control-label"></label>
                    <input asp-for="ApiUrl" class="form-control" />
                    <span asp-validation-for="ApiUrl" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RefreshInterval" class="control-label"></label>
                    <input asp-for="RefreshInterval" class="form-control" />
                    <span asp-validation-for="RefreshInterval" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Size" class="control-label"></label>
                    <select asp-for="Size" class="form-control">
                        <option value="small">Pequeño</option>
                        <option value="medium">Mediano</option>
                        <option value="large">Grande</option>
                    </select>
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input class="form-check-input" asp-for="IsActive" />
                    <label class="form-check-label" asp-for="IsActive"></label>
                </div>

                <div class="form-check">
                    <input class="form-check-input" asp-for="IsFavorite" />
                    <label class="form-check-label" asp-for="IsFavorite"></label>
                </div>
            </div>
        </div>

        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Guardar
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancelar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}